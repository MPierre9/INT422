@model IEnumerable<Assignment9.Controllers.ArtistBase>

@{
    ViewBag.Title = "Index";
}
<link href="../../Content/lightbox.css" rel="stylesheet">
<script src="../../Scripts/lightbox-plus-jquery.js"></script>
<style>
    .fancy {
        text-decoration: underline;
        color: red;
        font-family: Pacifico;
    }

    .backColor {
        background: rgba(23, 23, 40, 0.4);
        border-radius: 5px;
        padding: 5px;
    }

    .button {
        border-radius: 4px;
        background: rgba(16, 44, 61,0.7);
        border: none;
        color: #4e5e91;
        text-align: center;
        font-size: 20px;
        padding: 4px;
        width: 100px;
        transition: all 0.5s;
        cursor: pointer;
        margin: 5px;
    }

    .divSet {
        background: rgba(16, 44, 61,0.7);
        border: none;
        border-radius: 5px;
        text-align: center;
        font-size: 15px;
        padding: 4px;
        margin: 5px;
    }

    .button2 {
        border-radius: 4px;
        background: rgba(16, 44, 61,0.7);
        border: none;
        color: #4e5e91;
        text-align: center;
        font-size: 20px;
        padding: 4px;
        width: 400px;
        transition: all 0.5s;
        cursor: pointer;
        margin: 5px;
    }

    .button span {
        cursor: pointer;
        display: inline-block;
        position: relative;
        transition: 0.5s;
    }

        .button span:after {
            content: '\00bb';
            position: absolute;
            opacity: 0;
            top: 0;
            right: -20px;
            transition: 0.5s;
        }

    .button:hover span {
        padding-right: 25px;
    }

        .button:hover span:after {
            opacity: 1;
            right: 0;
        }



    .button2 span {
        cursor: pointer;
        display: inline-block;
        position: relative;
        transition: 0.5s;
    }

        .button2 span:after {
            content: '\00bb';
            position: absolute;
            opacity: 0;
            top: 0;
            right: -20px;
            transition: 0.5s;
        }

    .button2:hover span {
        padding-right: 25px;
    }

        .button2:hover span:after {
            opacity: 1;
            right: 0;
        }

    .button3 {
        border-radius: 4px;
        background: rgba(193, 21, 21,0.7);
        border: none;
        color: #4e5e91;
        text-align: center;
        font-size: 20px;
        padding: 4px;
        width: 100px;
        transition: all 0.5s;
        cursor: pointer;
        margin: 5px;
    }


        .button3 span {
            cursor: pointer;
            display: inline-block;
            position: relative;
            transition: 0.5s;
        }

            .button3 span:after {
                content: '\00bb';
                position: absolute;
                opacity: 0;
                top: 0;
                right: -20px;
                transition: 0.5s;
            }

        .button3:hover span {
            padding-right: 25px;
        }

            .button3:hover span:after {
                opacity: 1;
                right: 0;
            }

    a {
        text-decoration: none;
    }
</style>
<h2>Artist List</h2>

<p>
    <button class="button2"><span>@Html.ActionLink("Create New Artist", "Create", new { style = "text-decoration:none;" })</span></button>
</p>
<div class="backColor">

    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.UrlArtist)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BirthName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BirthOrStartDate)
            </th>

            <th>
                @Html.DisplayNameFor(model => model.Genre)
            </th>

            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>

                <td>
                    <a href="@Html.DisplayFor(modelItem => item.UrlArtist)" data-lightbox="image-1" data-title="@Html.DisplayFor(modelItem => item.Name)"><img src="@Html.DisplayFor(modelItem => item.UrlArtist)" alt="Artist Image" height="160" width="160"></a>
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.BirthName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.BirthOrStartDate)
                </td>

                <td>
                    @Html.DisplayFor(modelItem => item.Genre)
                </td>

                <td>
                    <button class="button"><span>@Html.ActionLink("Edit", "Edit", new { id = item.Id }, new { style = "text-decoration:none;" })</span></button>
                    <button class="button"><span>@Html.ActionLink("Details", "Details", new { id = item.Id }, new { style = "text-decoration:none;" })</span></button>
                    <button class="button3"><span>@Html.ActionLink("Delete", "Delete", new { id = item.Id }, new { style = "text-decoration:none" })</span></button>
                </td>
            </tr>
        }

    </table>
    </div>