<link href="../../Content/lightbox.css" rel="stylesheet">
<script src="../../Scripts/lightbox-plus-jquery.js"></script>
<style>
    .fancy {
        text-decoration: underline;
        color: red;
        font-family: Pacifico;
    }

    .backColor {
        background: rgba(23, 23, 40, 0.4);
        border-radius: 5px;
        padding: 5px;
    }

    .button {
        border-radius: 4px;
        background: rgba(16, 44, 61,0.7);
        border: none;
        color: #4e5e91;
        text-align: center;
        font-size: 20px;
        padding: 4px;
        width: 100px;
        transition: all 0.5s;
        cursor: pointer;
        margin: 5px;
    }

    .button2 {
        border-radius: 4px;
