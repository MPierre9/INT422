@model IEnumerable<Assignment9.Controllers.TrackBase>

@{
    ViewBag.Title = "Index";
}
<style>
    .fancy {
        text-decoration: underline;
        color: red;
        font-family: Pacifico;
    }

    .backColor {
        background: rgba(23, 23, 40, 0.4);
        border-radius: 5px;
        padding: 5px;
    }

    .button {
        border-radius: 4px;
        background: rgba(16, 44, 61,0.7);
        border: none;
        color: #4e5e91;
        text-align: center;
        font-size: 20px;
        padding: 4px;
        width: 100px;
        transition: all 0.5s;
        cursor: pointer;
        margin: 5px;
    }

    .divSet {
        background: rgba(16, 44, 61,0.7);
        border: none;
        border-radius: 5px;
        text-align: center;
        font-size: 15px;
        padding: 4px;
        margin: 5px;
    }

    .button2 {
        border-radius: 4px;
        background: rgba(16, 44, 61,0.7);
        border: none;
        color: #4e5e91;
        text-align: center;
        font-size: 20px;
        padding: 4px;
        width: 400px;
        transition: all 0.5s;
        cursor: pointer;
        margin: 5px;
    }

    .button span {
        cursor: pointer;
        display: inline-block;
        position: relative;
        transition: 0.5s;
    }

        .button span:after {
            content: '\00bb';
            position: absolute;
            opacity: 0;
            top: 0;
            right: -20px;
            transition: 0.5s;
        }

    .button:hover span {
        padding-right: 25px;
    }

        .button:hover span:after {
            opacity: 1;
            right: 0;
        }



    .button2 span {
        cursor: pointer;
        display: inline-block;
        position: relative;
        transition: 0.5s;
    }

        .button2 span:after {
            content: '\00bb';
            position: absolute;
            opacity: 0;
            top: 0;
            right: -20px;
            transition: 0.5s;
        }

    .button2:hover span {
        padding-right: 25px;
    }

        .button2:hover span:after {
            opacity: 1;
            right: 0;
        }

    .button3 {
        border-radius: 4px;
        background: rgba(193, 21, 21,0.7);
        border: none;
        color: #4e5e91;
        text-align: center;
        font-size: 20px;
        padding: 4px;
        width: 100px;
        transition: all 0.5s;
        cursor: pointer;
        margin: 5px;
    }


        .button3 span {
            cursor: pointer;
            display: inline-block;
            position: relative;
            transition: 0.5s;
        }

            .button3 span:after {
                content: '\00bb';
                position: absolute;
                opacity: 0;
                top: 0;
                right: -20px;
                transition: 0.5s;
            }

        .button3:hover span {
            padding-right: 25px;
        }

            .button3:hover span:after {
                opacity: 1;
                right: 0;
            }

    a {
        text-decoration: none;
    }
</style>
<h2>Track List</h2>
<div class="backColor">
<p>
    <button class="button2"><span>@Html.ActionLink("Create New Artist", "Create", new { style = "text-decoration:none;" })</span></button>
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Composers)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Genre)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Clerk)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Composers)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Genre)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Clerk)
        </td>
        <td>
            <button class="button"><span>@Html.ActionLink("Edit", "Edit", new { id = item.Id }, new { style = "text-decoration:none;" })</span></button>
            <button class="button"><span>@Html.ActionLink("Details", "Details", new { id = item.Id }, new { style = "text-decoration:none;" })</span></button>
            <button class="button3"><span>@Html.ActionLink("Delete", "Delete", new { id = item.Id }, new { style = "text-decoration:none" })</span></button>
        </td>
    </tr>
}

</table>
   
